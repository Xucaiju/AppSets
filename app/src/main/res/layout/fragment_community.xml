<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.FragmentCommunity">

    <xyz.sangcomz.stickytimelineview.TimeLineRecyclerView
        android:paddingTop="76dp"
        android:paddingBottom="52dp"
        android:id="@+id/timeline_recycler_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:itemCount="4"
        app:timeLineWidth="1.5dp"
        app:timeLineColor="?android:attr/colorAccent"
        app:timeLineCircleStrokeColor="@color/colorGoogleBlue"
        app:timeLineCircleColor="#908EB7FB"
        app:sectionBackgroundColor="@color/colorTransparent"
        tools:listitem="@layout/include_today_app_card" />

</FrameLayout>