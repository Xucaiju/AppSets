<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_normal"

    android:layout_marginBottom="@dimen/margin_normal">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragmentFavoriteIconImage"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="@dimen/margin_normal"
        app:layout_constraintEnd_toEndOf="@+id/fragmentFavoriteCardtranformationLayout"
        app:layout_constraintStart_toStartOf="@+id/fragmentFavoriteCardtranformationLayout"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/ic_launcher_round" />
<com.skydoves.transformationlayout.TransformationLayout
    android:id="@+id/fragmentFavoriteCardtranformationLayout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/fragmentFavoriteIconImage">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/fragment_favorite_content_card"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_xxsmall"
        android:layout_marginStart="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="1.5dp"
        app:strokeColor="@color/colorGoogleLightBlue"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginStart="@dimen/margin_medium"
                android:layout_marginEnd="@dimen/margin_medium">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fragmentFavoriteAppDisplayName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/AppSets.TextAppearance.SubTitle"
                    android:textColor="?android:attr/textColorPrimary"
                    tools:text="App Name" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/fragmentFavoriteDeveloperName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAppearance="@style/AppSets.TextAppearance.SubSubTitle"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="developer name" />
            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/fragment_favorite_app_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
                app:layout_constraintStart_toStartOf="@+id/linearLayout4"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
                tools:text="this is a dummy text for design,this is a dummy text for design,this is a dummy text for design,this is a dummy text for design,this is a dummy text for design,this is a dummy text for design " />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragmentFavoriteInstallOrUninstallButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/show_details"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fragmentFavorite_app_from_source"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_favorite_app_description" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/fragmentFavorite_app_from_source"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_launcher_foreground"

                app:layout_constraintBottom_toBottomOf="@+id/fragmentFavoriteInstallOrUninstallButton"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fragmentFavoriteInstallOrUninstallButton" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</com.skydoves.transformationlayout.TransformationLayout>




</androidx.constraintlayout.widget.ConstraintLayout>