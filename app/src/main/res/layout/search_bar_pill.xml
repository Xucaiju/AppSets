<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/search_bar_pill"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/height_search_view_small"
    android:background="@drawable/outline_bg_rounded"
    android:clickable="true"
    android:focusable="true">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_pill_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="@dimen/margin_xsmall"
        android:clickable="false"
        android:focusable="true"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_search"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:clickable="false"
        android:focusable="false"
        android:hint="@string/search"
        android:layout_marginEnd="@dimen/margin_normal"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAppearance="@style/AppSets.TextAppearance.SearchBar"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/search_pill_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/margin_normal" />
</androidx.constraintlayout.widget.ConstraintLayout>