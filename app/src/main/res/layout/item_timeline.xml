<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="12dp">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/timeline_app_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"

            android:layout_marginTop="@dimen/margin_normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/ic_launcher_round" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/timeline_app_display_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/AppSets.TextAppearance.Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintBottom_toBottomOf="@+id/timeline_app_icon"
            app:layout_constraintStart_toEndOf="@+id/timeline_app_icon"
            app:layout_constraintTop_toTopOf="@+id/timeline_app_icon"
            tools:text="Retro Music" />

        <com.google.android.material.chip.Chip
            android:id="@+id/time_line_app_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?android:attr/colorBackground"
            android:text="免费"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:textSize="22sp"
            app:chipStrokeColor="#EDD600"
            app:chipStrokeWidth="1dp"
            app:layout_constraintStart_toStartOf="@+id/timeline_app_icon"
            app:layout_constraintTop_toBottomOf="@+id/timeline_app_icon" />

        <com.google.android.material.chip.Chip
            android:id="@+id/timeline_app_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:backgroundTint="?android:attr/colorBackground"
            android:text="音乐"
            android:textSize="22sp"
            app:chipStrokeColor="#2196F3"
            app:chipStrokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/time_line_app_price"
            app:layout_constraintStart_toEndOf="@+id/time_line_app_price"
            app:layout_constraintTop_toTopOf="@+id/time_line_app_price" />

        <com.google.android.material.chip.Chip
            android:id="@+id/timeline_favorite_times_chip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:backgroundTint="?android:attr/colorBackground"
            android:textSize="22sp"
            app:chipStrokeColor="#E91E2F"
            app:chipStrokeWidth="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/timeline_app_type"
            app:layout_constraintStart_toEndOf="@+id/timeline_app_type"
            app:layout_constraintTop_toTopOf="@+id/timeline_app_type"
            tools:text="被收藏6次" />


        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/timeline_app_short_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="@dimen/margin_normal"
            android:paddingEnd="@dimen/margin_normal"
            android:paddingBottom="@dimen/margin_xlarge"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_xlarge"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeline_favorite_times_chip"
            tools:text="\tRetro is good for you , everyone can get it free,but not just a music player , it cant do whatever you wanted." />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/timeline_favorite_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/margin_xxsmall"
            android:layout_marginBottom="@dimen/margin_xxsmall"
            android:focusable="false"
            android:text="收藏"
            app:icon="@drawable/ic_favourite_active"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timeline_app_short_description"
            app:rippleColor="@color/colorTransparent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>