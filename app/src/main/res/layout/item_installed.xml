<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/search_result_app_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="@dimen/margin_normal"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/avatar" />

        <com.skydoves.transformationlayout.TransformationLayout
            android:id="@+id/search_result_transformatilonlayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/search_result_app_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:transformation_duration="350">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/search_result_item_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_normal"
                app:strokeWidth="1.5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/search_result_app_displayname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_normal"
                        android:layout_marginTop="@dimen/margin_small"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textAlignment="viewStart"
                        android:textAppearance="@style/AppSets.TextAppearance.Line1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="App Name" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/search_result_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/search_result_app_displayname"
                        android:layout_marginEnd="@dimen/margin_normal"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textAppearance="@style/AppSets.TextAppearance.Line3"
                        app:layout_constraintBottom_toBottomOf="@+id/search_result_app_displayname"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/search_result_app_displayname"
                        tools:text="size and rating" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/search_result_app_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="@+id/search_result_app_version"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="@+id/search_result_app_displayname"
                        app:layout_constraintTop_toBottomOf="@+id/search_result_app_displayname"
                        tools:text="this is dummy app desciption for design" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/search_result_app_extra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/search_result_app_version"
                        android:layout_marginTop="@dimen/margin_large"
                        android:layout_marginBottom="@dimen/margin_small"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textAppearance="@style/AppSets.TextAppearance.Line3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/search_result_app_description"
                        app:layout_constraintTop_toBottomOf="@+id/search_result_app_description"
                        tools:text="update date and extra" />

                    <androidx.constraintlayout.widget.Barrier
                        android:id="@+id/barrier3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:barrierDirection="left"
                        app:constraint_referenced_ids="search_result_app_version"
                        tools:layout_editor_absoluteX="393dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </com.skydoves.transformationlayout.TransformationLayout>
</androidx.constraintlayout.widget.ConstraintLayout>