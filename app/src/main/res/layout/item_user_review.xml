<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_margin="@dimen/margin_medium"
    android:id="@+id/user_review_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/user_review_user_avatar"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/avatar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/user_review_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_normal"
                android:text="汤姆猫"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/user_review_user_avatar"
                app:layout_constraintStart_toEndOf="@+id/user_review_user_avatar"
                app:layout_constraintTop_toTopOf="@+id/user_review_user_avatar" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/user_review_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="2020-02-22"
                app:layout_constraintBottom_toBottomOf="@+id/user_review_user_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_review_user_name" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/user_review_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:text="this is dummy user review for design time,this is dummy user review for design time ,this is dummy user review for design time, this is dummy user review for design time, this is dummy user review for design time,this is dummy user review for design time"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/user_review_time"
                app:layout_constraintStart_toStartOf="@+id/user_review_user_avatar"
                app:layout_constraintTop_toBottomOf="@+id/user_review_user_avatar" />



        </androidx.constraintlayout.widget.ConstraintLayout>



    </com.google.android.material.card.MaterialCardView>
