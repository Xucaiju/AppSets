<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_search_view"
    android:background="@drawable/outline_bg_rounded"
    android:clickable="true"
    android:elevation="1dp"
    android:focusable="true"
    android:translationZ="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/searchbar_user_avatar"
        app:layout_constraintEnd_toStartOf="@+id/searchbar_user_avatar"
        app:layout_constraintTop_toTopOf="@+id/searchbar_user_avatar">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/trends_user_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="雷军"
            android:textSize="12sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/trends_user_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="开发者"
            android:textSize="8sp" />


    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/searchbar_user_avatar"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:clickable="true"
        android:focusable="true"
        android:onClick="myProfiles"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/avatar" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/search_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="false"
        android:maxLength="20"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAppearance="@style/AppSets.TextAppearance.Line2"
        android:textColor="?android:attr/textColorSecondary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/margin_normal"
        tools:text="@string/appsets" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/main_searchbar_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginBottom="@dimen/margin_small"
        android:src="@drawable/ic_round_search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>