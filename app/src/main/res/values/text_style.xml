<resources>

    <style name="AppSets.TextAppearance.Title" parent="TextAppearance.AppCompat.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppSets.TextAppearance.Title.Large" parent="AppSets.TextAppearance.Title">
        <item name="android:textSize">28sp</item>
    </style>
    <style name="AppSets.TextAppearance.Line1" parent="TextAppearance.AppCompat.Medium">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="AppSets.TextAppearance.Line2" parent="AppSets.TextAppearance.Line1">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="AppSets.TextAppearance.Line3" parent="AppSets.TextAppearance.Line2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppSets.TextAppearance.Line4" parent="AppSets.TextAppearance.Line2">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppSets.TextAppearance.Line5" parent="AppSets.TextAppearance.Line2">
        <item name="android:textSize">8sp</item>
    </style>


    <style name="AppSets.TextAppearance.SearchBar" parent="AppSets.TextAppearance.Line1">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppSets.TextAppearance.Header" parent="@style/AppSets.TextAppearance.Title">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppSets.TextAppearance.SubTitle" parent="AppSets.TextAppearance.Title">
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="AppSets.TextAppearance.SubSubTitle" parent="AppSets.TextAppearance.Title">
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppSets.TextAppearance.BottomNav.Active" parent="AppSets.TextAppearance.Line1">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="AppSets.TextAppearance.BottomNav.Inactive" parent="AppSets.TextAppearance.BottomNav.Active">
        <item name="android:textSize">10sp</item>
    </style>


    <style name="AppSets.TextAppearance.Button" parent="AppSets.TextAppearance.Line1">
        <item name="android:letterSpacing">0.050</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppSets.TextAppearance.Body" parent="@style/TextAppearance.AppCompat.Body1">
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppSets.TextAppearance.Chip" parent="AppSets.TextAppearance.Line2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppSets.TextAppearance.Toolbar.Title" parent="AppSets.TextAppearance.Title">
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.050</item>
    </style>

    <style name="AppSets.TextAppearance.DialogTitle" parent="@style/AppSets.TextAppearance.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:letterSpacing">0.025</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="AppSets.TextAppearance.DialogSubTitle" parent="@style/AppSets.TextAppearance.SubTitle">
        <item name="android:textSize">14sp</item>
    </style>

</resources>